.header
  .header-top
    .header-top__name
      - if user_signed_in?
        = current_user.name
  .header-search
    %form.search
      %input.human-search{type: "placeholder"}
      %button.search-btn{type: "submit"}
        検索
  .header-bottom
    .header-bottom__right
      - if user_signed_in?
        = link_to "" do
          カルテ登録
        -# = link_to "マイページ", user_path(current_user.id)
        = link_to "ログアウト", logout_user_path(current_user.id)
      - else
        = link_to "ログイン", new_user_session_path, class: "post"
        = link_to "新規会員登録", new_user_registration_path, class: "post"
