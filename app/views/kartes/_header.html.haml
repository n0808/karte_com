.header
  .header-top
    .header-top__name
      - if user_signed_in?
        = current_user.name
  .header-search
    = form_with url:search_kartes_path, local: true,method: :get, class: "search" do |f|
      =f.text_field :keyword, class: "karte-search"
      %label.search-btn
        = f.submit "検索"
  .header-bottom
    .header-bottom__right
      - if user_signed_in?
        = link_to "カルテ登録", new_karte_path, class: "post"
        = link_to "ログアウト", logout_user_path(current_user.id), class: "post"
      - else
        = link_to "ログイン", new_user_session_path, class: "post"
        = link_to "新規会員登録", new_user_registration_path, class: "post"
